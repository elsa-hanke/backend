            file="config/liquibase/fake-data/yliopisto.csv"
            separator=";"
            tableName="yliopisto">
            <column name="id" type="numeric"/>
            <column name="nimi" type="string"/>
        </loadData>
    </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    
    <!--
        Added the entity Suoritusarviointi.
    -->
    <changeSet id="20201006135001-1" author="jhipster">
        <createTable tableName="suoritusarviointi">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tapahtuman_ajankohta" type="date">
                <constraints nullable="true" />
            </column>
            <column name="arvioitava_tapahtuma" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="pyynnon_aika" type="date">
                <constraints nullable="true" />
            </column>
            <column name="vaativuustaso" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="sanallinen_arvio" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="arviointi_aika" type="date">
                <constraints nullable="true" />
            </column>
            <column name="tyoskentelyjakso_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_suoritusarviointi_tyoskentelyjakso_id" />
            </column>
            <column name="arvioitava_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="arvioija_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="arvioitava_osaalue_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20201006135001-1-relations" author="jhipster">

    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->


<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="20201020080437-1" author="jhipster">
        <createTable tableName="pikaviesti_keskustelu">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="aihe" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20201020080437-1-relations" author="jhipster">

        <createTable tableName="pikaviesti_keskustelu_keskustelija">
            <column name="keskustelija_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="pikaviesti_keskustelu_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="pikaviesti_keskustelu_id, keskustelija_id" tableName="pikaviesti_keskustelu_keskustelija"/>

    </changeSet>

    <changeSet id="20201020080437-1-data" author="jhipster" context="faker">
        <loadData
                  file="config/liquibase/fake-data/pikaviesti_keskustelu.csv"
                  separator=";"
                  tableName="pikaviesti_keskustelu">
            <column name="id" type="numeric"/>
            <column name="aihe" type="string"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
